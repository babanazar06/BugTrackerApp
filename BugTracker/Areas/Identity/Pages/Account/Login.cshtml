@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Log in</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/BugTracker.styles.css" asp-append-version="true" />
        <style>
            .form-floating {
                margin-bottom: 5px;
            }
            .col-md-4 {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }
        </style>
    </head>
    <body>
        <div class="row">
            <div class="col-md-4">
                <form id="account" method="post">
                    <h2>Sign In</h2>
                    <hr/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="firstname" placeholder="email" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="password" placeholder="password" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>

                    <div asp-validation-summary="All" class="text-danger small"></div>
                </form>
            </div>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
    </body>
</html>
