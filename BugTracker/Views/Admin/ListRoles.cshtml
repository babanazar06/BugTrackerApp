@model IEnumerable<IdentityRole>

<!DOCTYPE html>
<html>
    <head>
        <title>All Roles</title>
    </head>
    <body>
        <h1>All Roles</h1>
        @if(Model.Any())
        {
            <a class="btn btn-primary" style="margin-bottom: 10px;" asp-action="CreateRole" 
                asp-controller="Admin">Add new role</a>
            foreach (var role in Model)
            {
                <div class="card">
                    <div class="card-header">
                        Role Id: @role.Id
                    </div>
                    <div class="card-body">
                        <h5>Role Name: @role.Name</h5>
                    </div>
                    <div class-card-footer>
                        <a class="btn btn-primary" asp-action="EditRole" 
                            asp-controller="Admin" asp-route-id="@role.Id">Edit</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </div>
                </div>
                <br />
            }   
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No roles created yet
                </div>
                <div class="card-body">
                    <a class="btn btn-primary" style="margin-bottom: 10px;" asp-action="CreateRole" 
                        asp-controller="Admin">Add new role</a>
                </div>
            </div>
        }
    </body>
</html>
