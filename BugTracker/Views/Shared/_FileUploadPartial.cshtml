@model FileOfBug
<style>
    .form-group {
        margin-bottom: 10px;
    }
</style>
<form id="myForm" asp-route-id="@ViewData["id"]"  method="post"  asp-action="UploadFile"  data-ajax="true"  enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="File" class="control-label">Uplaod File</label>
        <input asp-for="File" accept="file/*" />
        <span asp-validation-for="File" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-secondary btn-sm" />
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>


<script>
    var frm = document.getElementById('myForm');
    $('#myForm').submit(function () {
        $.ajax({
            success: function () {
                console.log('file upload was successful')
                frm.reset();
            }
        })
    })
</script>